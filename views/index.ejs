<%- include("partials/header") %>
   <div class="ui main text container">
   	<div class="ui huge header">Latest Car News</div>
    <div class="ui top attached segment">
<div class="ui divided items">
	<% blogs.forEach(function(blog){ %>
	 <div class="item">
	    <div class="image">
	        <a href="/blogs/<%= blog._id %>" class="ui medium image"><img src="<%= blog.image %>">     </a>      
	    </div>
	    <div class="content">
	      <a href="/blogs/<%=blog._id %>" class="header"><%= blog.title %></a>
	      <div class="meta">
	        <span class="cinema"><%= blog.created.toDateString() %></span>
	      </div>
	      <div class="description">
	        <p><%= blog.body.substring(0,100); %></p>
	      </div>

	    </div>
	  </div>
	<% }); %>
</div>
</div>
    
  </div>
<%- include("partials/footer") %>